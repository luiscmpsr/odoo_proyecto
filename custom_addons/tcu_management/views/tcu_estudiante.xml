<?xml version="1.0" encoding="UTF-8"?>

<odoo>
	<record id="action_tcu_estudiante" model="ir.actions.act_window">
		<field name="name">Estudiantes</field>
		<field name="res_model">tcu.estudiante</field>
		<field name="view_mode">list,form,kanban</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_similing_face">Crea a tu primer estudiante</p>
		</field>
	</record>
	
	<!-- Vista LIST -->
    <record id="view_tcu_estudiante_list" model="ir.ui.view">
        <field name="name">tcu.estudiante.list</field>
        <field name="model">tcu.estudiante</field>
        <field name="arch" type="xml">
            <list string="Estudiantes">
				<field name="id"      		  	 string="ID"/>
                <field name="est_nombre"         string="Nombre"/>
                <field name="est_identificacion" string="Identificación"/>
                <field name="est_carnet"         string="Carnet"/>
                <field name="est_correo"         string="Correo"/>
                <field name="est_telefono"       string="Teléfono"/>
            </list>
        </field>
    </record>

    <!-- Vista FORM -->
    <record id="view_tcu_estudiante_form" model="ir.ui.view">
        <field name="name">tcu.estudiante.form</field>
        <field name="model">tcu.estudiante</field>
        <field name="arch" type="xml">
            <form string="Estudiantes" edit="false" create="true" delete="false">
                <sheet>
                    <group>
						<field name="est_nombre"         string="Nombre"/>
						<field name="est_identificacion" string="Identificación"/>
						<field name="est_carnet"         string="Carnet"/>
						<field name="est_correo"         string="Correo"/>
						<field name="est_telefono"       string="Teléfono"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>