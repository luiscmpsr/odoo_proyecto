<?xml version="1.0" encoding="UTF-8"?>

<odoo>
	<record id="action_tcu_periodo" model="ir.actions.act_window">
		<field name="name">Periodos</field>
		<field name="res_model">tcu.periodo</field>
		<field name="view_mode">list,form,kanban</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_similing_face">Crea a tu primer periodo</p>
		</field>
	</record>
	
	<!-- Vista LIST -->
    <record id="view_tcu_periodo_list" model="ir.ui.view">
        <field name="name">tcu.periodo.list</field>
        <field name="model">tcu.periodo</field>
        <field name="arch" type="xml">
            <list string="Periodos">
				<field name="id"      		  string="ID"/>
                <field name="per_nombre"      string="Nombre"/>
                <field name="per_activo"      string="Activo"/>
                <field name="per_anno"        string="Año"/>
                <field name="per_fechainicio" string="Fecha Inicio"/>
                <field name="per_fechaFinal"  string="Fecha Final"/>
            </list>
        </field>
    </record>

    <!-- Vista FORM -->
    <record id="view_tcu_periodo_form" model="ir.ui.view">
        <field name="name">tcu.periodo.form</field>
        <field name="model">tcu.periodo</field>
        <field name="arch" type="xml">
            <form string="Periodos" edit="false" create="true" delete="false">
                <sheet>
                    <group>
                        <field name="per_nombre"      string="Nombre"/>
						<field name="per_activo"      string="Activo"/>
						<field name="per_anno"        string="Año"/>
						<field name="per_fechainicio" string="Fecha Inicio"/>
						<field name="per_fechaFinal"  string="Fecha Final"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>